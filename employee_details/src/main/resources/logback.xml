<configuration>
<appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
 <encoder>
         <pattern>[%d{yyyy-MM-dd HH:mm:ss}] - %msg%n</pattern>
      </encoder>
</appender>
<appender name="SIZE_TIME_OUTPUT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
  <!--  <file>c:/Tools/logs/sizeTimeOutputlogFile.log</file> -->
    <file>C:/Users/Amruth/Desktop/APP_LOG/Employee/EmployeeLogs.log</file>
    <encoder>
         <pattern>[%d{yyyy-MM-dd HH:mm:ss}] - %msg%n</pattern>
      </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>C:/Users/Amruth/Desktop/APP_LOG/Employee/archived/EmployeeLogZip.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
        <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
<!--Max Size of file to start Archive -->
            <maxFileSize>2MB</maxFileSize>
        </timeBasedFileNamingAndTriggeringPolicy>

<!-- Days till log history to keep -->
         <maxHistory>3</maxHistory>
    </rollingPolicy>
   
</appender>
   
   <root level = "INFO">
      <appender-ref ref = "SIZE_TIME_OUTPUT_FILE"/>
      <appender-ref ref = "STDOUT"/>
   </root>
</configuration>